<Window x:Class="CMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login to CMS"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Canvas Width="530" Height="650" Panel.ZIndex="0">
            <Path HorizontalAlignment="Center" VerticalAlignment="Center" Height="650" Stretch="Fill" Width="530">
                <Path.Fill>
                    <ImageBrush ImageSource="Resources/background.png" Stretch="UniformToFill"/>
                </Path.Fill>
                
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="20,0" IsClosed="True">
                            <LineSegment Point="430,0"/>
                            <QuadraticBezierSegment Point1="450,0" Point2="450,20"/>
                            <LineSegment Point="450,530"/>
                            <QuadraticBezierSegment Point1="450,550" Point2="430,550"/>
                            <LineSegment Point="20,550"/>
                            <QuadraticBezierSegment Point1="0,550" Point2="0,530"/>
                            <LineSegment Point="0,20"/>
                            <QuadraticBezierSegment Point1="0,0" Point2="20,0"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
                
            </Path>
        </Canvas>

        <Grid Margin="50" Panel.ZIndex="50">

            <Border Width="430" Height="550"
                Background="#BBFFFFFF"
                CornerRadius="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20" >
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="340">


                    <Label Content="Welcome" 
                       FontSize="28" 
                       FontWeight="Bold"
                       FontStyle="Italic"
                       Foreground="Purple"
                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <TextBlock Text="Log in to explore graphics and design softwares" 
                           FontSize="16" 
                           Foreground="#555" 
                           HorizontalAlignment="Center" Margin="0,5,0,40"/>

                    <TextBlock Text="Username:" FontSize="16" HorizontalAlignment="Center" />
                    <TextBox x:Name="UsernameTextBox" 
                         Style="{StaticResource ModernTextBox}"/>
                    <Label Name="UsernameNote" Visibility="Visible" Margin="0,-8,0,10" Foreground="Red" HorizontalAlignment="Center" Content=""/>

                    <TextBlock Text="Password:" FontSize="16" HorizontalAlignment="Center" />
                    <Grid Margin="40,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>
                        <PasswordBox x:Name="PasswordBox"
                            Style="{StaticResource ModernPasswordBox}" 
                            HorizontalAlignment="Center" 
                            Visibility="Visible" PasswordChanged="PasswordBox_PasswordChanged" />
                        <TextBox Name="PasswordTextBox" 
                        Visibility="Hidden" 
                        Style="{StaticResource ModernTextBox}"/>
                        <Image x:Name="EyeIcon" Source="Resources/zatvoreno_oko.png" 
                    Width="40" Height="40" 
                    Grid.Column="1" MouseDown="EyeIcon_MouseDown"/>
                    </Grid>
                    <Label Name="PasswordNote" Visibility="Visible" Foreground="Red" Margin="0,-8,0,0" HorizontalAlignment="Center" Content=""/>

                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Name="LoginButton" Content="Login" 
                    Style="{StaticResource ModernButton}" 
                    Width="120" Click="LoginButton_Click"/>

                        <Button Name="ExitButton" Content="Exit" Grid.Column="1"
                    Style="{StaticResource ModernButton}" 
                    Width="120" Click="ExitButton_Click" />
                    </Grid>

                </StackPanel>
            </Border>
        </Grid>
        <Border x:Name="NotificationPanel"
            Background="#DD4444"
            CornerRadius="5"
            Padding="10"
            Width="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,20,0,0"
            Visibility="Collapsed"
            Panel.ZIndex="1000">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <TextBlock x:Name="NotificationTitle" HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Foreground="White" />
                <TextBlock x:Name="NotificationMessage" HorizontalAlignment="Center"
                       Foreground="White"
                       TextWrapping="Wrap" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
