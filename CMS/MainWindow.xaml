<Window x:Class="CMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login to CMS" Height="500" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="Resources/background.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Border Margin="30" CornerRadius="20" Background="#BBFFFFFF" >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="340">


            <Label Content="Welcome to CMS" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <TextBlock Text="Log in to explore graphics and design softwares" 
                           FontSize="14" 
                           Foreground="#555" 
                           HorizontalAlignment="Center" Margin="0,10,0,30"/>
            
            <TextBlock Text="Username:" FontSize="16" HorizontalAlignment="Center" />
            <TextBox x:Name="UsernameTextBox" 
                         Style="{StaticResource ModernTextBox}"/>
            
            <TextBlock Text="Password:" FontSize="16" HorizontalAlignment="Center" />
            <Grid Margin="40,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource ModernPasswordBox}" 
                             HorizontalAlignment="Center"
                                 />
                <Image x:Name="EyeIcon" Source="Resources/otvoreno_oko.png" 
                           Width="40" Height="40" 
                           Grid.Column="1"/>
            </Grid>
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Login" 
                        Style="{StaticResource ModernButton}" 
                        Width="120" />

                <Button Content="Exit" Grid.Column="1"
                        Style="{StaticResource ModernButton}" 
                        Width="120" />
            </Grid>
            
        </StackPanel>
    </Border>
    </Grid>
</Window>
