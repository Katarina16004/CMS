<Window x:Class="CMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login to CMS" WindowState="Maximized"
        ResizeMode="CanResize" WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
>
    <Window.Background>
        <ImageBrush ImageSource="Resources/background.png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Border Width="400" Height="520"
                Background="#BBFFFFFF"
                CornerRadius="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20" >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="340">


            <Label Content="Welcome to CMS" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <TextBlock Text="Log in to explore graphics and design softwares" 
                           FontSize="14" 
                           Foreground="#555" 
                           HorizontalAlignment="Center" Margin="0,10,0,30"/>
            
            <TextBlock Text="Username:" FontSize="16" HorizontalAlignment="Center" />
            <TextBox x:Name="UsernameTextBox" 
                         Style="{StaticResource ModernTextBox}"/>
            
            <TextBlock Text="Password:" FontSize="16" HorizontalAlignment="Center" />
            <Grid Margin="40,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource ModernPasswordBox}" 
                             HorizontalAlignment="Center" 
                             Visibility="Visible" PasswordChanged="PasswordBox_PasswordChanged" />
                <TextBox Name="PasswordTextBox" 
                            Visibility="Hidden" 
                            Style="{StaticResource ModernTextBox}"/>
                    <Image x:Name="EyeIcon" Source="Resources/otvoreno_oko.png" 
                        Width="40" Height="40" 
                        Grid.Column="1" MouseDown="EyeIcon_MouseDown"/>
                </Grid>
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Name="LoginButton" Content="Login" 
                        Style="{StaticResource ModernButton}" 
                        Width="120" Click="LoginButton_Click"/>

                <Button Name="ExitButton" Content="Exit" Grid.Column="1"
                        Style="{StaticResource ModernButton}" 
                        Width="120" Click="ExitButton_Click" />
            </Grid>
            
        </StackPanel>
    </Border>
    </Grid>
</Window>
