<Window x:Class="CMS.AdminAdd_Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        xmlns:local="clr-namespace:CMS"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="AdminContentDetails">
    <Grid>
        <Viewbox Stretch="Fill">
            <Canvas Width="1000" Height="700">
                <Path Fill="#8971d0">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="20,0" IsClosed="True">
                                <LineSegment Point="980,0"/>
                                <QuadraticBezierSegment Point1="1000,0" Point2="1000,20"/>
                                <LineSegment Point="1000,680"/>
                                <QuadraticBezierSegment Point1="1000,700" Point2="980,700"/>
                                <LineSegment Point="20,700"/>
                                <QuadraticBezierSegment Point1="0,700" Point2="0,680"/>
                                <LineSegment Point="0,20"/>
                                <QuadraticBezierSegment Point1="0,0" Point2="20,0"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </Canvas>
        </Viewbox>

        <Border
            Background="White"
            CornerRadius="20"
            Margin="5" 
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical" Margin="0,0,0,10">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Label VerticalAlignment="Center">Title:</Label>
                        <TextBox Grid.Column="1" Style="{StaticResource ModernTextBox}" Background="#fdf7ff"
                    x:Name="TitleTextBox"/>
                    </StackPanel>
                    <Label Name="TitleNote" Visibility="Visible" Foreground="Red" Margin="0,-8,0,0" HorizontalAlignment="Center" Content=""/>


                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Margin="0,0,10,0">Photo:</TextBlock>
                        <Button Name="SelectImageButton" Content="Select image" Style="{StaticResource ModernButton}" Click="SelectImageButton_Click" />
                        <StackPanel>
                            <Image x:Name="ImagePreview" Height="100" Width="100" Margin="20,0,0,0" MouseLeftButtonDown="ImagePreview_MouseLeftButtonDown"/>
                            <Label Name="PhotoNote" Visibility="Visible" Foreground="Red" Margin="0,-8,0,0" HorizontalAlignment="Center" Content=""/>
                        </StackPanel>
                    </StackPanel>
                    
                </StackPanel>


                <ToolBar Grid.Row="1" Height="37" BorderThickness="2" BorderBrush="#dfb3db" Background="#FFE0F0">


                    <ToggleButton x:Name="BoldButton" ToolTip="Bold" Style="{StaticResource ModernToggleButton}" Command="EditingCommands.ToggleBold">
                        <fa5:SvgAwesome
                        Height="15" Width="15"
                        Icon="Solid_Bold"
                        Foreground="Black"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                    </ToggleButton>
                    <ToggleButton x:Name="ItalicButton" ToolTip="Italic" Style="{StaticResource ModernToggleButton}" Command="EditingCommands.ToggleItalic">
                        <fa5:SvgAwesome
                        Height="15" Width="15"
                        Icon="Solid_Italic"
                        Foreground="Black"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                    </ToggleButton>
                    <ToggleButton x:Name="UnderlineButton" ToolTip="Underline" Style="{StaticResource ModernToggleButton}" Command="EditingCommands.ToggleUnderline" >
                        <fa5:SvgAwesome
                        Height="15" Width="15"
                        Icon="Solid_Underline"
                        Foreground="Black"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                    </ToggleButton>

                    <Separator Width="0.5" Background="White" Margin="0,0,10,0"/>

                    <ComboBox SelectionChanged="FontFamilyComboBox_SelectionChanged"
                        Name="FontFamilyComboBox"
                        Width="150" IsTextSearchCaseSensitive="False" IsTextSearchEnabled="True">   
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock MaxWidth="200" FontFamily="{Binding Source}" Text="{Binding Source}"></TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ComboBox x:Name="FontSizeComboBox" Width="60" Margin="10,0" SelectionChanged="FontSizeComboBox_SelectionChanged" IsEditable="False">
                        <ComboBoxItem>8</ComboBoxItem>
                        <ComboBoxItem>9</ComboBoxItem>
                        <ComboBoxItem>10</ComboBoxItem>
                        <ComboBoxItem>11</ComboBoxItem>
                        <ComboBoxItem>12</ComboBoxItem>
                        <ComboBoxItem>14</ComboBoxItem>
                        <ComboBoxItem>16</ComboBoxItem>
                        <ComboBoxItem>18</ComboBoxItem>
                        <ComboBoxItem>20</ComboBoxItem>
                        <ComboBoxItem>22</ComboBoxItem>
                        <ComboBoxItem>24</ComboBoxItem>
                        <ComboBoxItem>26</ComboBoxItem>
                        <ComboBoxItem>28</ComboBoxItem>
                        <ComboBoxItem>36</ComboBoxItem>
                        <ComboBoxItem>48</ComboBoxItem>
                        <ComboBoxItem>72</ComboBoxItem>
                    </ComboBox>

                    <ComboBox x:Name="FontColorComboBox" SelectionChanged="FontColorComboBox_SelectionChanged" Width="150" Margin="5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Rectangle Width="10" Height="10" Fill="{Binding Brush}" Margin="2"/>
                                    <TextBlock Text="{Binding Name}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                </ToolBar>

                <RichTextBox Grid.Row="2" x:Name="EditorRichTextBox" BorderThickness="2" BorderBrush="#D6B3FF" Background="#fdf7ff" Margin="10,10,10,0" TextChanged="EditorRichTextBox_TextChanged" SelectionChanged="EditorRichTextBox_SelectionChanged" VerticalScrollBarVisibility="Auto" />

                <StatusBar Grid.Row="3" Margin="10,0" Background="White" BorderThickness="2" BorderBrush="#D6B3FF">
                    <StatusBarItem>
                        <TextBlock x:Name="WordCountTextBlock" Text="Words: 0" />
                        
                    </StatusBarItem>
                    <Label Name="RichTbNote" Visibility="Visible" Foreground="Red" Margin="20,0,0,0" HorizontalAlignment="Center" Content=""/>
                </StatusBar>
                <StackPanel Grid.Row="4" Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Margin="10,0">
                    <Button Name="SaveButton" Content="Save" Style="{StaticResource ModernButton}" Margin="20,0" Click="SaveButton_Click"/>
                    <Button Name="CloseButton" Content="Close" Style="{StaticResource ModernButton}" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        <Border x:Name="NotificationPanel"
            Background="#DD4444"
            CornerRadius="5"
            Padding="10"
            Width="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,20,0,0"
            Visibility="Collapsed"
            Panel.ZIndex="1000">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <TextBlock x:Name="NotificationTitle" HorizontalAlignment="Center"
               FontWeight="Bold"
               Foreground="White" />
                <TextBlock x:Name="NotificationMessage" HorizontalAlignment="Center"
               Foreground="White"
               TextWrapping="Wrap" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
