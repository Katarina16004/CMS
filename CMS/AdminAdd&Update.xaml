<Window x:Class="CMS.AdminAdd_Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        xmlns:local="clr-namespace:CMS"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="AdminContentDetails">
    <Grid>
        <Viewbox Stretch="Fill">
            <Canvas Width="1000" Height="700">
                <Path Fill="#8971d0">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="20,0" IsClosed="True">
                                <LineSegment Point="980,0"/>
                                <QuadraticBezierSegment Point1="1000,0" Point2="1000,20"/>
                                <LineSegment Point="1000,680"/>
                                <QuadraticBezierSegment Point1="1000,700" Point2="980,700"/>
                                <LineSegment Point="20,700"/>
                                <QuadraticBezierSegment Point1="0,700" Point2="0,680"/>
                                <LineSegment Point="0,20"/>
                                <QuadraticBezierSegment Point1="0,0" Point2="20,0"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </Canvas>
        </Viewbox>

        <Border
            Background="White"
            CornerRadius="20"
            Margin="5" 
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical" Margin="0,0,0,10">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Label VerticalAlignment="Center">Title:</Label>
                        <TextBox Grid.Column="1" Style="{StaticResource ModernTextBox}" Background="#fdf7ff"
                    x:Name="TitleTextBox"/>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Margin="0,0,10,0">Photo:</TextBlock>
                        <Button Content="Select image" Style="{StaticResource ModernButton}" />
                        <Image x:Name="ImagePreview" Height="100" Width="100" Margin="20,0,0,0"/>
                    </StackPanel>
                </StackPanel>


                <ToolBar Grid.Row="1" Height="37" BorderThickness="2" BorderBrush="#dfb3db" Background="#FFE0F0">

                    
                    <ToggleButton x:Name="BoldButton" ToolTip="Bold" Style="{StaticResource ModernToggleButton}">
                        <fa5:SvgAwesome
                        Height="15" Width="15"
                        Icon="Solid_Bold"
                        Foreground="Black"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                    </ToggleButton>
                    <ToggleButton x:Name="ItalicButton" ToolTip="Italic" Style="{StaticResource ModernToggleButton}">
                        <fa5:SvgAwesome
                        Height="15" Width="15"
                        Icon="Solid_Italic"
                        Foreground="Black"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                    </ToggleButton>
                    <ToggleButton x:Name="UnderlineButton" ToolTip="Underline" Style="{StaticResource ModernToggleButton}" >
                        <fa5:SvgAwesome
                        Height="15" Width="15"
                        Icon="Solid_Underline"
                        Foreground="Black"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                    </ToggleButton>

                    <Separator Width="0.5" Background="White" Margin="0,0,10,0"/>

                    <ComboBox SelectionChanged="FontFamilyComboBox_SelectionChanged"
                        Name="FontFamilyComboBox"
                        Width="150" IsTextSearchCaseSensitive="False" IsTextSearchEnabled="True">   
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock MaxWidth="200" FontFamily="{Binding Source}" Text="{Binding Source}"></TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ComboBox x:Name="FontSizeComboBox" Width="60" Margin="10,0">
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="12"/>
                        <ComboBoxItem Content="14"/>
                        <ComboBoxItem Content="16"/>
                        <ComboBoxItem Content="18"/>
                        <ComboBoxItem Content="20"/>
                    </ComboBox>

                    <ComboBox x:Name="ColorComboBox" Width="150">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" Fill="{Binding}" Stroke="Black" StrokeThickness="0.5" Margin="2"/>
                                    <TextBlock Text="{Binding}" Margin="5,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </ToolBar>

                <RichTextBox Grid.Row="2" x:Name="EditorRichTextBox" BorderThickness="2" BorderBrush="#D6B3FF" Background="#fdf7ff" Margin="10,10,10,0" TextChanged="EditorRichTextBox_TextChanged" SelectionChanged="EditorRichTextBox_SelectionChanged" VerticalScrollBarVisibility="Auto" />

                <StatusBar Grid.Row="3" Margin="10,0" Background="White" BorderThickness="2" BorderBrush="#D6B3FF">
                    <StatusBarItem>
                        <TextBlock x:Name="WordCountTextBlock" Text="Words: 0" />
                    </StatusBarItem>
                </StatusBar>
                <StackPanel Grid.Row="4" Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Margin="10,0">
                    <Button Name="SaveButton" Content="Save" Style="{StaticResource ModernButton}" Margin="20,0"/>
                    <Button Name="CloseButton" Content="Close" Style="{StaticResource ModernButton}" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
