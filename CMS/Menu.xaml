<Window x:Class="CMS.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMS"
        mc:Ignorable="d"
        Title="Menu" WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="CanResize" WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0"  Height="60" LastChildFill="False">
            <DockPanel.Background>
                <ImageBrush ImageSource="Resources/background.png" Stretch="Fill"/>
            </DockPanel.Background>
            <Label Name="NameSurnameCurrentUser" Foreground="Purple" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
            <Button Name="ButtonLogout"
                    Style="{StaticResource ModernButton}"
                    Background="White"
                    Foreground="Purple"
                    Content="Logout"
                    Width="150" Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Right"
                    Click="ButtonLogout_Click"/>
        </DockPanel>

        <ContentControl x:Name="MainContent" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
